programa {
  funcao inicio() {
    inteiro num1
    inteiro antecessor
    inteiro sucessor

    escreva("Digite um numero inteiro: ")
    leia(num1)

    antecessor = num1 - 1
    sucessor = num1 + 1

    escreva("\nO antecessor de " + num1 + " é " + antecessor)
    escreva("\nO sucessor de " + num1 + " é " + sucessor)



  }
}
